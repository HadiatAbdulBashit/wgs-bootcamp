<div class="container px-5 my-5 bg-light rounded-4 col-xxl-3 col-xl-4 col-lg-5 col-md-6">
    <!-- Judul halaman dinamis dari variabel title -->
    <h1 class="pt-5"><%= title %></h1>
    
    <!-- Menampilkan pesan kesalahan jika ada -->
    <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger pb-0">
            <ul>
                <!-- Menampilkan setiap pesan kesalahan -->
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <!-- Formulir untuk menambahkan kontak -->
    <form action="/contact/add" method="post" class="pb-3">
        <!-- Input untuk nama -->
        <div class="form-floating mb-3">
            <input type="text" name="name" class="form-control" id="floatingInput" placeholder="name@example.com"
            <% if (name != 'undefined') { %>
                value="<%= name %>"
            <% } %>
            >
            <label for="floatingInput">Name</label>
        </div>
        
        <!-- Input untuk nomor telepon -->
        <div class="form-floating mb-3">
            <input type="text" name="phone" class="form-control" id="floatingPhone" placeholder="Phone"
            <% if (phone != 'undefined') { %>
                value="<%= phone %>"
            <% } %>
            >
            <label for="floatingPhone">Phone</label>
        </div>
        
        <!-- Input untuk alamat email -->
        <div class="form-floating mb-3">
            <input type="email" name="email" class="form-control" id="floatingEmail" placeholder="Email"
            <% if (email != 'undefined') { %>
                value="<%= email %>"
            <% } %>
            >
            <label for="floatingEmail">Email</label>
        </div>
        
        <!-- Tombol untuk menyimpan kontak -->
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Save Contact</button>
            <a href="/contact" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
